

<div class="banner">
  <%= render 'shared/navbar' %>

  <div class="container">
    <h1><strong>Working Dog</strong></h1>
    <p>Find the right Paw to help you in needs</p>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
    <% end %>
  </div>
</div>
<!-- <div class="d-flex justify-content-center my-3"> -->
  <div id="services-index-main-container">
    <div id="services-index-cards-container">
      <h3 id="services-index-owner-heading">Available Services</h3>
      <div class="container">
        <% @services.each do |service| %>
        <a href="<%= service_path(service) %>">
          <div class="card-product">
            <%= cl_image_tag service.user.photo.key %>
            <div class="card-product-infos">
              <h2><%= service.title %></h2>
              <p><%= service.description %></p>
              <p><%= service.price %>â‚¬</p>
            </div>
          </div>
        </a>
        <% end %>
      </div>
    </div>
    <div id="map" data-mapbox-api-key="<%= ENV['MAPBOX_TOKEN'] %>" data-markers="<%=  [{lat: 32.0853, lng: 34.7818}].to_json%>">
      <!-- <img src="https://picsum.photos/id/237/200/300"> -->

    </div>
  </div>
</div>



