<div class="container mt-3">

  <div class="row">
    <div class="col-6 offset-3">

      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= @service.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= @service.user.username.capitalize %></h6>
          <p class="card-text"><%= @service.description %></p>
          <p class="card-text"><%= @service.price %>â‚¬</p>

          <%= link_to services_path do%>
          <p class="btn btn-primary">Back to Services</p>
          <% end %>

          <!-- no link for booking new yet so i left a second index path -->
          <%= link_to new_service_booking_path(@service) do%>
          <p class="btn btn-success">Book Service</p>
          <% end %>

          <% if @service.user.id == @user.id %>
            <%= link_to service_path(@service.id), method: :delete do%>
            <p class="btn btn-danger">Delete Service?</p>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>

