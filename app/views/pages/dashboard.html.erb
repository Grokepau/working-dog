<div class="dashboard_container">
<h2>Dashboard</h2>

<section class="my_section">
  <nav class="my_nav">
    <h1 class="dashboard_subtitles">Bookings</h1>
    <% @bookings.each do |booking| %>
          <div class="card-product">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <div class="card-product-infos">
          <div><%=  %></div>
             <ul>
             <%  if  booking.user == current_user %>

              <a class="dashboard_link" href="#">
               <li class="dashboard_booking_details"><h2 class=""><%= booking.service.user.username %></h2></li>
                <li class="dashboard_booking_details"><p class=""><%= booking.date %></p></li>
                 <li class="dashboard_booking_details"><p class=""><%= booking.service.title %></p></li>
              </a>

             <% end %>
             </ul>
          </div>
        </div>

    <% end %>

  </nav>

  <article class="my_article">
    <h1 class="dashboard_subtitles">Services</h1>
    <div class = "my_inner_container ">
    <% @services.each do |service| %>
          <div class="card-product">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <div class="card-product-infos">
          <div><%= service.title %></div>
           <%= link_to service_path(service), method: :delete do %>
             <div class="font-awesome-trash"><i class="fas fa-trash" aria-hidden="true"></i></div>
           <% end %>
             <ul>
             <% service.bookings.each do |job| %>

              <a class="dashboard_link" href="#">
                <li class="dashboard_booking_details"><%= job.date %><p class=""><%= job.user.username %></p></li>
              </a>
              <%= link_to booking_path(job), method: :delete do %>
                <div class="font-awesome-trash"><i class="fas fa-trash" aria-hidden="true"></i></div>
              <% end %>
             <% end %>
             </ul>
          </div>
        </div>
    <% end %>
</div>
</div>
  </article>
   <%= link_to 'new service', new_service_path(current_user.id), class: "btn btn-primary" %>
</section>
</div>
